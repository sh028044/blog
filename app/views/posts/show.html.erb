<%= render 'session' %>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
<p>
  <% if @post.uploadfile.exists? %>
      <strong>File:</strong>
      <%= image_tag @post.uploadfile.url(:thumb) %>
  <% end %>
</p>
<h2>Comments</h2>
<%= render  @post.comments %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
 <p>
   <%= f.label :commenter %><br>
   <%= f.text_field :commenter %>
 </p>
 <p>
   <%= f.label :body %><br>
   <%= f.text_area :body %>
 </p>
 <p>
   <%= f.submit %>
 </p>
 <% end %>
<%= link_to 'Back', posts_path(:blogblock_id => @post.blogblock_id) %>
<%= link_to 'Edit', edit_post_path(@post) %>